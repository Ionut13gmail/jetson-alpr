# ALPR Service Configuration
# Copy to .env and modify as needed

# Service mode: 'api' (PanoramaCity) or 'ftp' (legacy)
ALPR_MODE=api

# Test mode - detection only, no API calls (for calibration)
ALPR_TEST_MODE=true

# Log level: DEBUG, INFO, WARNING, ERROR
ALPR_LOG_LEVEL=INFO

# Detection confidence threshold (0.0-1.0)
ALPR_CONF_THRESH=0.4

# Delete processed images from inbox
ALPR_DELETE_PROCESSED=true

# Enhanced detection for distant plates (requires yolov8n.onnx model)
ALPR_ENHANCED_DETECTION=false
ALPR_MIN_PLATE_SIZE=30
ALPR_VEHICLE_CONF_THRESH=0.3

# Crop margins for enhanced detection (0.0-0.5)
# Use when car is centered and you want to exclude edges
ALPR_ENHANCED_CROP_LEFT=0.0
ALPR_ENHANCED_CROP_RIGHT=0.0
ALPR_ENHANCED_CROP_TOP=0.0
ALPR_ENHANCED_CROP_BOTTOM=0.0

# Gate control (for production use)
ALPR_GATE_ENABLED=false
ALPR_GATE1_IP=192.168.1.230
ALPR_GATE2_IP=192.168.1.234

# PanoramaCity API (for production use)
ALPR_API_URL=https://acces.panoramacity.ro/utilitypagesAPI/_x_ApI_nano.php
ALPR_API_KEY=A954C6A5-5207-4DF8-91BC-E9E3B73664BF

# Live preview server port (test mode)
ALPR_PREVIEW_PORT=8080
